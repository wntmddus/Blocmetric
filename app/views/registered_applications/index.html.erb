<%= javascript_include_tag "chartkick.js" %>
<h1>All Applications</h1>
<div class="row">
  <div class="col-md-8">
    <% @registered_applications.each do |registered_application| %>
      <%= render partial: 'application', locals: { registered_application: registered_application } %>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="form-group">
      <%= button_to "New", new_registered_application_path, method: :get, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
