<%= form_for registered_application do |f| %>
<% if registered_application.errors.any? %>
<div class="alert alert-danger">
  <h4><%= pluralize(registered_application.errors.count, "error") %>.</h4>
  <ul>
    <% registered_application.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control', placeholder: "Enter name of application" %>
<%= f.label :url %>
<%= f.text_area :url, class: 'form-control', placeholder: "Enter url of application" %>

<div class="form-group">
  <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>
